{
    "compilerOptions": {
      "outDir": "./build",
      "rootDir": "./src",
      "moduleResolution": "node",
      "module": "es2022",
      "target": "es2022", 
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }