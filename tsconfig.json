{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }